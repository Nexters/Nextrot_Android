<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.nextrot.troter.songs.SongsViewModel" />

        <variable
            name="item"
            type="com.nextrot.troter.data.Song" />

        <variable
            name="fragment"
            type="com.nextrot.troter.base.SongsFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="@{viewmodel.isSelected(item) ? @drawable/ripple_rounded_square_white_selected : @drawable/ripple_rounded_square_white}"
        android:onClick="@{() -> fragment.onClickItem(item)}"
        tools:ignore="UseCompoundDrawables"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">


        <ImageView
            android:id="@+id/thumb"
            android:layout_width="54dp"
            android:layout_height="44dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/thumbnail"
            android:background="@drawable/rounded_square"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_rank"
            app:layout_constraintTop_toTopOf="parent"
            app:src="@{item}" />

        <ImageView
            android:id="@+id/share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="20dp"/>

        <ImageView
            android:id="@+id/play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/share_button"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{() -> fragment.onClickPlay(item)}"
            android:layout_marginEnd="17dp"/>

        <TextView
            android:id="@+id/item_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#cc000000"
            android:layout_marginStart="13dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/content"
            android:layout_width="135dp"
            android:layout_height="27dp"
            android:text="@{item.name}"
            android:textSize="18sp"
            android:textColor="#000000"
            android:letterSpacing="-0.03"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/thumb"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="135dp"
            android:layout_height="24dp"
            android:layout_marginStart="10dp"
            android:text="@{item.name}"
            android:textSize="16sp"
            android:textColor="#b3000000"
            android:letterSpacing="-0.04"
            app:layout_constraintStart_toEndOf="@+id/thumb"
            app:layout_constraintTop_toBottomOf="@+id/content" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>