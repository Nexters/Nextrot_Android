<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.nextrot.troter.data.Item" />

        <variable
            name="fragment"
            type="com.nextrot.troter.player.list.PlaylistFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{() -> fragment.onClickItem(item)}"
        tools:ignore="UseCompoundDrawables"
        android:background="@drawable/rounded_square_dark_selected"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp">

        <ImageView
            android:id="@+id/thumb"
            android:background="@drawable/rounded_square"
            android:layout_width="54dp"
            android:layout_height="44dp"
            android:contentDescription="@string/thumbnail"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="12dp"
            app:src="@{item}"/>

        <TextView
            android:id="@+id/title"
            android:text="사랑의 재개발"
            android:textSize="18sp"
            android:textColor="@color/colorPlayerText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginStart="10dp"
            android:letterSpacing="-0.03"
            app:layout_constraintBottom_toTopOf="@+id/singer"
            app:layout_constraintStart_toEndOf="@+id/thumb"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/singer"
            android:text="유산슬"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorPlayerText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="14dp"
            android:letterSpacing="-0.04"
            app:layout_constraintStart_toEndOf="@+id/thumb" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>